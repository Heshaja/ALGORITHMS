#Definition for singly-linked list.
class ListNode(object):
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next
class Solution(object):
    def mergeTwoLists(self, list1, list2):
        newnode = ListNode()    # newnode(0) -> None   here newnode(0) is 0 it is just the place holder 
        temp = newnode          # temp = newnode(0)
        while list1 and list2 :
            if list1.val<=list2.val :
                temp.next = list1
                list1 = list1.next
            else:
                temp.next = list2
                list2 = list2.next
            temp = temp.next

# if any list becomes empty 
        if list1 :                  
            temp.next = list1 
        else :
            temp.next = list2 

        return newnode.next     # this will return without the place holder that is newnode(0)
        
